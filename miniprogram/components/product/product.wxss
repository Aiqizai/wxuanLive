.auto-img {
  width: 100%;
  display: block;
} 

.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.product{
  padding: 20rpx;
  margin-top: 40rpx;
  background-color: #ff9966;
  border-radius: 8rpx;
}

.pro-img{
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.pro-img-box{
  height: 200rpx !important;
}

.pro-info{
  width: calc(100% - 220rpx);
  margin-left: 20rpx;
}

.pro-name{
  font-size: 32rpx;
  color: #222;
  margin-bottom: 20rpx;
}

.small-font{
  margin-bottom: 10rpx;
  color: #666;
  font-size: 24rpx;
}

.monthly-sale{
  margin-bottom: 10rpx;
  color: #666;
  font-size: 24rpx;
}

.price-box{
  margin-top: 10rpx;
}

.pro-price{
  color: #e4393c;
  font-weight: bold;
  font-size: 28rpx;
  line-height: 60rpx;
}

.pro-buy{
  width: 130rpx;
  height: 60rpx;
  background-color: #0099cc;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
}


/* 弹出层 */
.pro-detail{ 
  /* border-radius: 16rpx; */
  height: 1000rpx;
}

.pro-detail-content{
  padding: 0 40rpx;
}

.detail-imgBox{
  height: 600rpx;
}

.img-box{
  height: 600rpx !important;
}

.detail-desc{
  display: flex;
  padding: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e8e8e8;
}

.detail-name{
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: #222;
}

.detail-price{
  flex: 1;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  color: #F6686A;
}

.pro-info-box{
  padding: 10rpx 0;
  border-bottom: 1px solid #e8e8e8;
}

.info-title{
  margin-bottom: 10rpx;
  font-size: 32rpx;
}

.detail-info{
  /* padding-left: 20rpx; */
  font-size: 24rpx;
  color: rgb(155, 151, 151);
}

.count-box{
  padding: 10rpx 0;
  line-height: 60rpx;
}

.count-text{
  font-size: 32rpx;
  color: #222;
}

.choose-rules{
  margin-top: 70rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: rgb(155, 151, 151);
  border-top: 1px solid #e8e8e8;
}

.p-count-text{
  font-size: 28rpx;
  color: #444;
  line-height: 48rpx;
}

.round{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.count{
  padding: 0 20rpx;
  height: 48rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #666;
}

.round-img{
  height: 48rpx;
}


/* 修改步进器样式 */
.minus-style{
  border-radius: 50% !important;
  color: #fff;
  background-color: #FCCFD0;
  border-color: #F6686A !important;
}

.plus-style{
  border-radius: 50% !important;
  color: #fff;
  background-color: #F6686A;
  border-color: #F6686A !important;
}

.ipt-class{
  background-color: transparent;
}

/* 修改步进器样式 end*/

.item-title{
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #222;
}

.item-option{
  display: flex;
  flex-wrap: wrap;
}

.item-option>view{
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  width: calc(100% / 3 - 20rpx + 20rpx / 3);
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  color: #222;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.item-option>view.item-option-active{
  color: #fff;
  background-color: #F6686A;
}

.item-option>view:nth-child(3n){
  margin-right: 0;
}

.add{
  margin: 40rpx 0;
}

.open-btn{
  background-color: #F6686A;
    color: #fff;
    font-size: 28rpx;
    font-weight: normal;
    border-radius: 65rpx;
    height: 88rpx;
    line-height: 88rpx;
}